<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

	<modelVersion>4.0.0</modelVersion>
	<groupId>webboards</groupId>
	<artifactId>engine</artifactId>
	<version>1.1-SNAPSHOT</version>
	<packaging>war</packaging>
	<parent>
		<relativePath>../maven/appengine/pom.xml</relativePath>
		<groupId>webboards</groupId>
		<artifactId>appengine</artifactId>
		<version>1.1-SNAPSHOT</version>
	</parent>

	<properties>
		<appid>web-boards</appid>
	</properties>

	<dependencies>
		<dependency>
			<!-- for editor only -->
			<groupId>commons-io</groupId>
			<artifactId>commons-io</artifactId>
			<version>2.4</version>
		</dependency>
	</dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>webboards</groupId>
				<artifactId>tools</artifactId>
				<version>1.1-SNAPSHOT</version>
				<executions>
					<execution>
						<id>svgclean</id>
						<phase>generate-resources</phase>
						<goals>
							<goal>svgclean</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<in>${basedir}/src/main/svg/bastogne-orig.svg</in>
					<out>${project.build.directory}/${project.build.finalName}/bastogne/bastogne.svg</out>
					<htmlTemplate>${basedir}/src/main/svg/index.html</htmlTemplate>
					<htmlOut>${project.build.directory}/${project.build.finalName}/bastogne/index.html</htmlOut>
				</configuration>
			</plugin>
		</plugins>
	</build>

	<profiles>
		<profile>
			<id>dev</id>
			<properties>
				<dev.profile.active>true</dev.profile.active>
			</properties>
			<build>
				<plugins>
					<plugin>
						<groupId>org.codehaus.mojo</groupId>
						<artifactId>build-helper-maven-plugin</artifactId>
						<version>1.4</version>
						<executions>
							<execution>
								<id>add-source</id>
								<phase>generate-sources</phase>
								<goals>
									<goal>add-source</goal>
								</goals>
								<configuration>
									<sources>
										<source>../core/src/main/java</source>
									</sources>
								</configuration>
							</execution>
							<execution>
								<id>add-resource</id>
								<phase>generate-sources</phase>
								<goals>
									<goal>add-resource</goal>
								</goals>
								<configuration>
									<resources>
										<resource>
											<directory>../core/src/main/resources</directory>
											<targetPath>resources</targetPath>
										</resource>
									</resources>
								</configuration>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>

		<profile>
			<id>prod</id>
			<activation>
				<property>
					<name>dev.profile.active</name>
					<value>false</value>
				</property>
				<activeByDefault>true</activeByDefault>
			</activation>
			<dependencies>
				<dependency>
					<groupId>webboards</groupId>
					<artifactId>core</artifactId>
					<version>1.1-SNAPSHOT</version>
				</dependency>
			</dependencies>
		</profile>
	</profiles>
</project>
